<!-- RECIPES -->
<div class="container recipes">
  <div class="row">
    <% data.slides.each do |recipe| %>
      <div class="col-xs-3 recipe">
        <% link_to recipe.url, target: "_blank" do %>
          <div class="recipepic">
            <%= image_tag "slides/" + recipe.img + ".png" %>
          </div>
        <% end %>
        <div class="recipetext">
            <h3><%= recipe.name %></h2>
            <p><%= recipe.text %></p>
        </div>
      </div>
    <% end %>
  </div>
